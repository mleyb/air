<form action="index.html" class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">Name:</label>
            <div class="controls">
                <input type="text" class="input-large" name="name" id="input01">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input02">E-mail:</label>
            <div class="controls">
                <input type="email" class="input-large" name="email" id="input02">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="select01">Subject:</label>
            <div class="controls">
                <select name="subject" id="select01">
                    <option>General support</option>
                    <option>Bug report</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="textarea">Message:</label>
            <div class="controls">
                <textarea class="input-large" id="textarea" rows="4"></textarea>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn btn-primary" value="Send">
            </div>
        </div>
    </fieldset>
</form>
