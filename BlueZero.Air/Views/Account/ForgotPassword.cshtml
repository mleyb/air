@model BlueZero.Air.Models.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<div class="row">
    <div class="span10 offset1">
        <div class="page-header">
            <h1>@ViewBag.Title <small>Reset your password.</small></h1>
        </div>

        <div class="well">
            <section id="forgotPasswordForm">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()                   
                    
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-block alert-error" })

                    <fieldset>
                        <div class="control-group">
                            @Html.LabelFor(m => m.EmailAddress, new {@class = "control-label"})
                            <div class="controls">                                                       
                                @Html.TextBoxFor(m => m.EmailAddress, new { @type = "email", placeholder = "Enter email address..." })                                
                                @Html.ValidationMessageFor(m => m.EmailAddress, null, new { @class = "help-inline" })                                        
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">     
                                <button type="submit" class="btn btn-large btn-primary" data-loading-text="Processing...">Reset</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </section>            
        </div>
    </div>    
</div>

@section scripts {    
    @Scripts.Render("~/bundles/bootstrap-validation")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#loginLink').hide()
        });

        $(function () {
            $("form").validate();
        });
    </script>
}
