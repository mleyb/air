@model IEnumerable<BlueZero.Air.Models.DayEntry>

@{ 
    string tableId = (string)ViewData["TableId"]; 
}

@if (Model.Count() > 0)
{
    <table id="@tableId" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-hover dataTable">
        <thead>
            <tr>
                <th style="width: 20%"></th>
                <th>Time</th>
                <th>Entry Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                @Html.Partial("_DayEntryListRowPartial", entry)
            }
        </tbody>
    </table>
}
else
{
    <div>
        <p>
            No entries recorded.
        </p>
    </div>
}