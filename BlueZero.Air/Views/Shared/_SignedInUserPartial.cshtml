<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, @User.Identity.Name <b class="caret"></b></a>
    <ul class="dropdown-menu">
        @if (User.IsInRole("Administrator"))
        {
            <li><a href="@Url.Action("Index", "Administrator")"><i class="icon-home"></i> Home</a></li>
            <li><a href="@Url.Action("Status", "Administrator")"><i class="icon-eye-open"></i> Status</a></li>
        }
        else if (User.IsInRole("Parent"))
        {
            <li><a href="@Url.Action("Index", "Parent")"><i class="icon-home"></i> Home</a></li>
        }
        <li><a href="@Url.Action("Manage", "Account")"><i class="icon-cogs"></i> My Account</a></li>
        <li><a href="@Url.Action("Index", "Support")"><i class="icon-question-sign"></i> Support</a></li>
        <li class="divider"></li>
        <li><a href="@Url.Action("Index", "News")"><i class="icon-bell"></i> News</a></li>
        <li class="divider"></li>
        <li><a href="@Url.Action("LogOff", "Account")"><i class="icon-off"></i> Sign Out</a></li>
    </ul>
</li>
